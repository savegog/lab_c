#include <time.h>

int DayOfTheWeek(int year,int mon,int day){
    struct tm t;
    t.tm_year = year-1900;
    t.tm_mon = mon-1;
    t.tm_mday = day;
    mktime(&t);
    return t.tm_wday;

}

#include <stdio.h>
#include <stdlib.h>
int main(){

int year, mon, day;
int dayofweek;

printf("Enter year:\n");
scanf("%d", &year);

printf("Enter mon:\n");
scanf("%d", &mon);

printf("Enter day:\n");
scanf("%d", &day);

dayofweek = DayOfTheWeek(year,mon,day);
printf("Day of the week:%d\n", dayofweek);

return 0;
}
