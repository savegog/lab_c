#include <stdio.h>
#include <math.h>
int main() 
{
    double matrix[3][3];
    int i, j;
    double main_diag = 0.0;
    double side_diag = 0.0;

    printf("Enter 3x3 matrix:\n");
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++) {
            scanf("%lf", &matrix[i][j]);
            if (i == j) {
                main_diag += matrix[i][j];
                        }
            if (i + j == 2) {
                side_diag += matrix[i][j];
                            }
                                }
                            }

    printf("Sum main diagonal: %.2lf\n", main_diag);
    printf("Sum side diagonal: %.2lf\n", side_diag);

    int matrix_2[2][2];

    printf("Enter 2x2 matrix:\n");
    for (i = 0; i < 2; i++) {
        for (j = 0; j < 2; j++) {
            scanf("%d", &matrix_2[i][j]);
                                }
                            }   
    printf("\nSquare matrix:\n");
    for (i = 0; i < 2; i++) {
        for (j = 0; j < 2; j++) {
            printf("%d ", ;
                                }
        printf("\n");
                            }

    return 0;
}
