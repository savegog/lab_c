#include <stdio.h>
#include <string.h>
int main() {
    char str[80];
    printf("Vvedite stroku do 80 simvolov:");
    scanf("%s", &str);
    for (int i = 0; i < strlen(str); i++){
        if (str[i] == 'a'){
            str[i] = toupper(str[i]);
        }
        if (str[i] == 'b'){
            str[i] = toupper(str[i]);
        }
        if (str[i]=='!') {
            str[i] = '?';
        }
        
    }
    printf("%s", str);
    return 0;
}
